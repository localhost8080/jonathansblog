#!/bin/sh
mkdir ~/git
git clone https://github.com/mdbootstrap/bootstrap-material-design ~/git/bootstrap-material-design

# script to get the bootswatch files and folder structure and put it into the multiloquent styles folder
cd ~/git/bootstrap-material-design
git pull

cd /var/www/vhosts/development/wp-content/themes/multiloquent/bootstrap/css
rm -rf mdb
cp -r ~/git/bootstrap-material-design mdb
cd mdb
rm -rf .git
rm .gitignore


cd /var/www/vhosts/development/wp-content/themes/multiloquent/
rm -rf documentation
rm -f multiloquent.zip
git add --all .
git commit -m "update to material design themes"
git push origin master